<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gsampaio.hermes"
    android:versionCode="100"
    android:versionName="1.0.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="14" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:icon="@drawable/hemes_sandals"
        android:label="@string/app_name"
        android:theme="@style/Theme.FullScreen"
        android:name="com.gsampaio.hermes.support.HApplication"> >
        <activity
            android:name=".MainBoard"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="eu.janmuller.android.simplecropimage.CropImage"></activity>
    </application>

</manifest>